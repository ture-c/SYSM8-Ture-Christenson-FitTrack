<Window x:Class="FitTrack.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitTrack"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800">
    <Grid>
            <StackPanel>
                <TextBlock Text="Users" FontWeight="Bold" FontSize="15" />
                <ListBox x:Name="UsersListBox" DisplayMemberPath="Username" Height="150" />
                <Button Content="Remove User" Click="RemoveUser_Click" />

                <TextBlock Text="Workouts" FontWeight="Bold" FontSize="15"/>
                <ListBox x:Name="WorkoutsListBox" DisplayMemberPath="Type" Height="150" />
                <Button Content="Remove Workout" Click="RemoveWorkout_Click" />
            </StackPanel>
        </Grid>
    </Window>
