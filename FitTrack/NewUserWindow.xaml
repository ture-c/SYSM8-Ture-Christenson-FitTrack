<Window x:Class="FitTrack.NewUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitTrack"
        mc:Ignorable="d"
        Title="NewUserWindow" Width="450" Height="800" Background="LightGray">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Welcome, new user!" FontWeight="Bold" FontFamily="Arial" Foreground="Crimson" FontSize="30" />

            <TextBox x:Name="UsernameTextBox" Text="Username"
                     Width="200" Height="20" Foreground="Crimson" BorderBrush="Crimson" />

            <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged"
                         Width="200" Height="20" Foreground="Crimson" BorderBrush="Crimson" />

            <ComboBox x:Name="CountryComboBox" Text="Select Country"
                      Width="200" Height="20" Background="Crimson" />

            <Button x:Name="AddUserBtn" Click="AddUserBtn_Click"
                    Content="Add" Width="50" Height="30" Background="Crimson" Foreground="White"
                    FontSize="20" FontFamily="Arial"/>
        </StackPanel>
    </Grid>
</Window>
