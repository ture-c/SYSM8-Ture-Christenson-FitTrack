<Window x:Class="FitTrack.AddWorkoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Workout" Height="450" Width="400">
    <Grid Background="Crimson">
        <StackPanel>
            <Label Content="Date:" />
            <TextBox x:Name="DateInput" />

            <Label Content="Workout Type:" />
            <ComboBox x:Name="WorkoutTypeComboBox">
                <ComboBoxItem Content="Cardio" />
                <ComboBoxItem Content="Strength" />
            </ComboBox>

            <Label Content="Duration (in minutes):" />
            <TextBox x:Name="DurationInput" />

            <Label Content="Calories Burned:" />
            <TextBox x:Name="CaloriesBurnedInput" IsReadOnly="True"/>

            <Label Content="Distance (only for Cardio):" />
            <TextBox x:Name="DistanceInput" />

            <Label Content="Repetitions (only for Strength):" />
            <TextBox x:Name="RepetitionsInput" />

            <Label Content="Notes:" />
            <TextBox x:Name="NotesInput" />

            <Button Content="Save Workout" Click="Button_Click" Background="LightGray" />
        </StackPanel>
    </Grid>
</Window>