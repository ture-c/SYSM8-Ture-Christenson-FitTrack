<Window x:Class="FitTrack.AddWorkoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Workout" Height="300" Width="400">
    <StackPanel Background="Crimson">
        <ComboBox Name="WorkoutTypeComboBox" Margin="10" Foreground="Crimson">
            <ComboBoxItem Content="Cardio"/>
            <ComboBoxItem Content="Repetitions"/>
        </ComboBox>

        <TextBox Name="DurationInput"  Text="Duration (min)" />
        <TextBox Name="CaloriesBurnedInput"  Text="Calories Burned"/>
        <TextBox Name="DistanceInput" Text="Distance (m)"/>
       
        <TextBox Name="RepetitionsInput"  Text="Repetitions"/>
     
        <TextBox Name="NotesInput" Text="Notes"/>

        <Button Name="SaveButton" Content="Save Workout" Click="Button_Click" Height="50" Background="LightGray"/>
    </StackPanel>
</Window>